<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AcerShop.View.AdminProductsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:model="using:AcerShop.Model"
    xmlns:viewModel="using:AcerShop.ViewModel"
    Title="Управление товарами"
    x:DataType="viewModel:AdminProductsViewModel"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <ContentPage.Content>
        <Grid BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#101010}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Заголовок  -->
            <Frame
                Grid.Row="0"
                Margin="20,30,20,0"
                Padding="15"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark=#1a1a1a}"
                BorderColor="Green"
                CornerRadius="20"
                HasShadow="True">
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="Управление товарами"
                    TextColor="{AppThemeBinding Light=#1C375C,
                                                Dark=White}" />
            </Frame>

            <!--  Поле поиска  -->
            <Border
                Grid.Row="1"
                Margin="20,20,20,0"
                Padding="0"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark=#2a2a2a}"
                StrokeShape="RoundRectangle 20"
                StrokeThickness="0">
                <Grid ColumnDefinitions="*,Auto">
                    <SearchBar
                        Grid.Column="0"
                        BackgroundColor="Transparent"
                        CancelButtonColor="{AppThemeBinding Light=#1C375C,
                                                            Dark=LightGray}"
                        Placeholder="Поиск товаров..."
                        PlaceholderColor="{AppThemeBinding Light=Gray,
                                                           Dark=LightGray}"
                        Text="{Binding SearchText}"
                        TextColor="{AppThemeBinding Light=Black,
                                                    Dark=White}" />

                    <Button
                        Grid.Column="1"
                        BackgroundColor="Transparent"
                        Command="{Binding RefreshCommand}"
                        Text="🔄"
                        TextColor="{AppThemeBinding Light=#1C375C,
                                                    Dark=#1CFF08}" />
                </Grid>
            </Border>

            <!--  Основной контент  -->
            <Frame
                Grid.Row="2"
                Margin="20,10,20,10"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark=#1a1a1a}"
                BorderColor="Green"
                CornerRadius="20"
                HasShadow="True">
                <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
                    <CollectionView ItemsSource="{Binding Products}">
                        <CollectionView.EmptyView>
                            <Label
                                HorizontalOptions="Center"
                                Text="Нет товаров"
                                TextColor="{AppThemeBinding Light=#1C375C,
                                                            Dark=LightGray}"
                                VerticalOptions="Center" />
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Product">
                                <Frame
                                    Margin="10,5"
                                    Padding="15"
                                    BackgroundColor="{AppThemeBinding Light=#f5f5f5,
                                                                      Dark=#2a2a2a}"
                                    CornerRadius="15">
                                    <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                Text="{Binding Name}"
                                                TextColor="{AppThemeBinding Light=#1C375C,
                                                                            Dark=White}" />
                                            <Label
                                                FontSize="16"
                                                Text="{Binding Price, StringFormat='Цена: {0:C}'}"
                                                TextColor="{AppThemeBinding Light=#1C375C,
                                                                            Dark=LightGray}" />
                                        </VerticalStackLayout>

                                        <Button
                                            Grid.Column="1"
                                            Margin="5,0"
                                            BackgroundColor="Transparent"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:AdminProductsViewModel}}, Path=GoToEditProductCommand}"
                                            CommandParameter="{Binding .}"
                                            FontSize="16"
                                            Text="✏️"
                                            TextColor="{AppThemeBinding Light=#1C375C,
                                                                        Dark=#1CFF08}" />

                                        <Button
                                            Grid.Column="2"
                                            Margin="5,0"
                                            BackgroundColor="Transparent"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:AdminProductsViewModel}}, Path=DeleteProductCommand}"
                                            CommandParameter="{Binding .}"
                                            FontSize="16"
                                            Text="🗑️"
                                            TextColor="{AppThemeBinding Light=#FF3D00,
                                                                        Dark=#FF6D00}" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </RefreshView>
            </Frame>

            <!--  Кнопка добавления  -->
            <Button
                Grid.Row="3"
                Margin="40,0,40,20"
                BackgroundColor="{AppThemeBinding Light=#1C375C,
                                                  Dark=Green}"
                Command="{Binding AddProductCommand}"
                CornerRadius="20"
                FontSize="16"
                HeightRequest="50"
                Text="Добавить товар"
                TextColor="{AppThemeBinding Light=White,
                                            Dark=White}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>